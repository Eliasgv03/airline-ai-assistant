# API Keys
GOOGLE_API_KEY=your_gemini_api_key_here

# LLM Model (Gemini)
GEMINI_MODEL=gemini-2.5-flash-lite

# Backend Configuration
ENVIRONMENT=development
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
BACKEND_URL=http://localhost:8000
LOG_LEVEL=info

# CORS
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:8000","https://*.onrender.com"]

# Database (PostgreSQL with pgvector)
# For local development, use Docker: docker run -d -p 5432:5432 -e POSTGRES_PASSWORD=postgres --name airline-postgres ankane/pgvector
# For production (Render), this will be auto-populated
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/airline_ai

# Vector Store Configuration
VECTOR_STORE_COLLECTION_NAME=air_india_policies
EMBEDDING_DIMENSION=768

# Frontend (copy the following to frontend/.env.local if needed)
# NEXT_PUBLIC_BACKEND_URL=http://localhost:8000
